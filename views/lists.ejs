    <h1 class="first">to-do-list</h1>
    
    <div class="main">

    <div class="box">
    
    <div class="div1">
        <h1><%= kindOfDay %></h1>
    </div>    

    <div class="div2">
        <ul>
            <!-- <li>buy food</li>
            <li>cook food</li>
            <li>eat food</li> -->
            <input type="checkbox" name="ch1" id="ch1" checked>
            <label for="ch1">buy food &nbsp &nbsp &nbsp &nbsp &nbsp<%= currtime%></label>
            <br>
            <input type="checkbox" name="ch2" id="ch2" checked>
            <label for="ch2">cook food &nbsp &nbsp &nbsp &nbsp &nbsp<%= currtime%></label>
            <br>
            <input type="checkbox" name="ch3" id="ch3" checked>
            <label for="ch3">eat food &nbsp &nbsp &nbsp &nbsp &nbsp<%= currtime%></label>
            <br>
            <!-- <li><%= AddedItem %></li> -->
            <% for(var i=0;i<AddedItem.length;i++){ %>
                <!-- <li>
                    <%= AddedItem[i] %>
                </li>  -->
                <!-- <p><%= AddedItem[i] %></p> -->
                <input type="checkbox" id="ch" checked>
                <label for="ch"><%= AddedItem[i] %> &nbsp &nbsp &nbsp &nbsp &nbsp <%=currtime%></label>
                <br>
            <% } %>
        </ul>   
    </div>
    

    <div class="div3">
        <form action="/" method="post">
        <input type="text" name="newItem" placeholder="add new item" class="enter" required>
        <button type="submit" name="submit">+</button>
    </form>
    </div>

    </div>

    </div>

